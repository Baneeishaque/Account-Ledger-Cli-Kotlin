{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gradlew.bat build --warning-mode all",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "gradlew.bat clean"
        },
        {
            "label": "Rebuild",
            "type": "shell",
            "dependsOn": [
                "clean",
                "build"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "jar",
            "type": "shell",
            "command": "gradlew.bat jar",
            "dependsOn": "build"
        },
        {
            "label": "run jar",
            "type": "shell",
            "command": "java -jar cli-app/build/libs/cli-app.jar",
            "dependsOn": "jar"
        }
    ]
}